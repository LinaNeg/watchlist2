<div class="banner">
  <h1>Ma Watchlist</h1>
</div>
<div class="main-container">
  <h2>Mes listes de films</h2>
  <% if @lists != nil %>
    <% @lists.each do |list| %>
      <h4><%= list.name %></h4>
    <% end %>
  <% end %>
  <%= simple_form_for(@list) do |f| %>
  <%= f.input :name %>
  <%= f.submit "Enregistrer", class: "btn btn-primary" %>
<% end %>
</div>
